<div class="container">
    <section class="header">
        <h1 class="title">Swimming World Magazine Scraper</h1>
    </section>
    <nav class="navbar">
        <div class="container">
            <ul class="navbar-list">
                <li class="navbar-item"><a class="navbar-link" href="/" id="scrape-articles">Scrape new articles</a></li>
                <li class="navbar-item"><a class="navbar-link" href="/saved" id="view-saved-articles">Saved articles</a></li>
            </ul>
        </div>
    </nav>
    <br>
    
    <section class="row" id="articles">
        <h3>Articles</h3>

        <div id="empty-mssg" class="hide">No new articles to show.</div>

        <ul id="new-articles-list">
            {{#each articles}}
                <li class="not-saved"><span style="font-weight: bold;">{{title}}</span>&nbsp;&nbsp;&nbsp;<button class="button-primary save-article" data-id="{{_id}}">Save</button>
                    <ul>
                        <li>{{summary}}&nbsp;&nbsp;&nbsp;<a href="{{link}}" target="_blank">Read more >></a></li>
                    </ul>
                </li>
                <br>
            {{/each}}
        </ul>

    </section>

    <section class="footer">
        <br><br><br><br>
    </section>

</div>